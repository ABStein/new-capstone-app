
<h1>Product Info</h1>
<h2>Name: <%= @product.name %></h2>
<h3>Description: <%= @product.description %></h3>
<h4>Price: <%= @product.price %></h4>
<h4>Image: <%= @product.image %></h4>

<a href="/products/<%= @product.id %>/edit" class="btn btn-warning">Edit Product</a>
<a href="/products/<%= @product.id %>" data-method="delete" class="btn btn-danger">Delete Product</a>

<%= link_to "Edit Product", "/products/#{ @product.id }/edit", class: "btn btn-warning" %>
<%= link_to "Delete Prodcut", "/prodcuts/#{ @product.id }", method: :delete, class: "btn btn-danger" %>